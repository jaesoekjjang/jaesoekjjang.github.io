---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";
import Sidebar from "@components/Sidebar";
import BlogContent from "@components/BlogContent";
import CenteringWrapper from "@layouts/CenteringWrapper.tsx";

export type Posts = typeof posts;

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );

const categories = [
  ...new Set(
    [""].concat(
      sortedPosts.flatMap(({ frontmatter }) => frontmatter.category ?? [])
    )
  ),
];
---

<script></script>

<PageLayout>
  <PageMeta title={`Blog | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <BlogContent posts={sortedPosts} categories={categories} client:load />
  </section>
</PageLayout>

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }

  .post {
    display: grid;
    grid-template-columns: 1fr;
    line-height: 1.5;
  }

  @media (min-width: 640px) {
    .post {
      grid-template-columns: 1fr auto;
    }
  }

