---
type Props = {
  value: string;
  size?: "sm" | "md" | "lg";
  className?: string;
};

const sizes = {
  sm: "py-1 px-2 text-sm rounted-xs",
  md: "py-2 px-3 text-md rounded-sm",
  lg: "py-3 px-4 text-lg rounded-md",
};

const {
  props: { value, size = "md", className },
} = Astro;
---

<a
  class:list={["unset bg-[--inline-code-bg]", sizes[size], className].join(" ")}
  href={`/tags/${value}`}
>
  {value}
</a>
