---
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html class="theme-sleek" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <ViewTransitions>
      <!-- <Favicon /> -->
      <slot name="meta" />
    </ViewTransitions>
  </head>
  <body class="text-text-body bg-bg-body mx-auto">
    <!-- <Header /> -->
    <div class="main-wrapper h-[calc(100%-theme(space.16))]">
      <main id="main">
        <slot name="main" />
      </main>
    </div>
    <style>
      body {
        min-height: 100vh;
      }
      .main-wrapper {
        position: relative;
        min-height: 100%;
      }
    </style>
  </body>
</html>
